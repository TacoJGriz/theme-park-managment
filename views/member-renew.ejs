<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Renew Membership | Primus Park</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #6f42c1;
            --accent: #17a2b8;
            --secondary: #ffc107;
            --success: #28a745;
            --danger: #dc3545;
            --dark: #343a40;
            --light: #f8f9fa;
            --white: #ffffff;
            --gray: #6c757d;
            --radius: 12px;
            --shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            background-color: var(--light);
            color: var(--dark);
        }
        .container {
            max-width: 600px;
            margin: 3em auto;
            padding: 0 1em;
        }

        h1 {
            font-family: 'Lobster', cursive;
            font-size: 2.5em;
            color: var(--dark);
            text-align: center;
            margin-bottom: 0.5em;
            text-shadow: 1px 1px 0px rgba(0,0,0,0.05);
        }

        /* content sections */
        .card {
            background: var(--white);
            padding: 2em;
            border-radius: var(--radius);
            box-shadow: var(--shadow-lg);
            margin-bottom: 2em;
            border-top: 5px solid var(--accent);
            animation: slideUp 0.4s ease-out;
        }
        .card.payment-card {
            border-top-color: var(--success);
        }

        @keyframes slideUp {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .card h3 {
            margin-top: 0;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 10px;
            font-size: 1.4em;
            color: var(--dark);
            font-family: 'Lobster', cursive;
            letter-spacing: 0.5px;
        }

        /* data rows */
        .info-pair {
            display: flex;
            justify-content: space-between;
            font-size: 1.05em;
            padding: 15px 0;
            border-bottom: 1px solid #f9f9f9;
        }
        .info-pair:last-child { border-bottom: none; }
        .info-pair strong { color: var(--gray); font-weight: 600; font-size: 0.9em; text-transform: uppercase; }
        .info-pair span { color: var(--dark); font-weight: 600; }

        .price {
            color: var(--success) !important;
            font-size: 1.4em !important;
            font-weight: 700;
        }

        /* payment radio buttons */
        .payment-option {
            display: block;
            padding: 15px;
            background: var(--light);
            border: 2px solid transparent;
            border-radius: var(--radius);
            margin-bottom: 10px;
            cursor: pointer;
            transition: var(--transition);
        }
        .payment-option:hover {
            background-color: #e9ecef;
            border-color: #dee2e6;
        }

        .payment-option input[type="radio"] {
            margin-right: 12px;
            transform: scale(1.2);
        }
        .payment-option label {
            font-weight: 600;
            cursor: pointer;
            color: var(--dark);
        }
        .payment-option .default {
            color: var(--success);
            font-size: 0.85em;
            font-weight: 700;
            margin-left: 10px;
            background: #d4edda;
            padding: 2px 8px;
            border-radius: 10px;
        }

        /* action buttons */
        .btn-confirm {
            width: 100%;
            padding: 15px;
            background-color: var(--success);
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 30px;
            font-size: 1.2em;
            font-weight: 700;
            margin-top: 1.5em;
            transition: var(--transition);
            box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3);
        }
        .btn-confirm:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

        .cancel-link {
            display: block;
            text-align: center;
            margin-top: 1.5em;
            text-decoration: none;
            color: var(--gray);
            font-weight: 600;
            transition: color 0.2s;
        }
        .cancel-link:hover { color: var(--danger); text-decoration: underline; }

        .message-error {
            padding: 1em;
            border-radius: 8px;
            margin-bottom: 2em;
            font-weight: bold;
            background-color: var(--danger);
            color: white;
            text-align: center;
            box-shadow: var(--shadow-sm);
        }
    </style>
</head>
<body>
    <%- include('partials/member-header') %>

    <div class="container">
        <h1>Confirm Renewal</h1>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="message-error"><%= error %></div>
        <% } %>

        <div class="card">
            <h3>Renewal Details</h3>

            <div class="info-pair">
                <strong>Membership Type</strong>
                <span><%= renewal.type_name %></span>
            </div>
            <div class="info-pair">
                <strong>New Expiration Date</strong>
                <span><%= renewal.new_end_date %></span>
            </div>
            <div class="info-pair">
                <strong>Renewal Price</strong>
                <span class="price">$<%= parseFloat(renewal.base_price).toFixed(2) %></span>
            </div>
        </div>

        <div class="card payment-card">
            <h3 style="color: var(--success);">Select Payment Method</h3>
            <form action="/member/renew" method="POST">
                <% /* Loop through saved cards */ %>
                <% paymentMethods.forEach(method => { %>
                    <div class="payment-option">
                        <label>
                            <input
                                type="radio"
                                name="payment_method_id"
                                value="<%= method.payment_method_id %>"
                                <% if (method.is_default) { %>checked<% } %>
                            >
                            <%= method.mock_identifier %>
                            <% if (method.mock_expiration) { %>
                                <span style="color: var(--gray); font-weight: normal; font-size: 0.9em;">(Exp: <%= method.mock_expiration %>)</span>
                            <% } %>
                            <% if (method.is_default) { %>
                                <span class="default">DEFAULT</span>
                            <% } %>
                        </label>
                    </div>
                <% }); %>

                <button type="submit" class="btn-confirm">Confirm & Pay</button>
            </form>
            <a href="/member/manage" class="cancel-link">Cancel</a>
        </div>
    </div>
</body>
</html>