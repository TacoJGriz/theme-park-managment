<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ride Popularity Report</title>
    <%# Link to Chart.js library %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        body { font-family: sans-serif; margin: 0; background-color: #f4f4f9; color: #333; }
        .container { max-width: 1200px; margin: 2em auto; background: white; padding: 2em; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        h1 { color: #444; border-bottom: 2px solid #eee; padding-bottom: 0.5em; }
        form { margin-bottom: 2em; padding: 1.5em; border: 1px solid #ddd; border-radius: 4px; background-color: #fafafa; }
        .form-grid { display: grid; grid-template-columns: 2fr 1fr; gap: 1em; align-items: end; }
        .form-grid label { display: block; margin-bottom: 5px; font-weight: bold; }
        .form-grid input[type="date"] { width: 100%; padding: 10px; box-sizing: border-box; border-radius: 4px; border: 1px solid #ccc; }
        button { padding: 10px 20px; background-color: #007bff; color: white; border: none; cursor: pointer; border-radius: 4px; font-size: 1em; font-weight: bold; }
        button:hover { background-color: #0056b3; }
        .chart-container { 
            margin-top: 2em;
            border: 1px solid #ddd; 
            padding: 1.5em;
            background: #fff;
            border-radius: 8px;
            min-height: 500px; 
            position: relative;
        }
        .error { color: #d9534f; font-weight: bold; background-color: #f2dede; padding: 1em; border-radius: 4px; margin-bottom: 15px; }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    <div class="container">
        <h1>Ride Popularity Report</h1>

        <% if (typeof error !== 'undefined' && error) { %>
            <p class="error"><%= error %></p>
        <% } %>

        <form action="/reports/ride-popularity" method="POST">
            <div class="form-grid">
                <div>
                    <label for="selected_date">Select Month/Year:</label>
                    <%# The date picker will be used to determine the month and year %>
                    <input type="date" id="selected_date" name="selected_date" value="<%= selected_date %>" required>
                </div>
                <div style="align-self: end;">
                    <button type="submit">Generate Report</button>
                </div>
            </div>
        </form>

        <%# Check if report data exists and has entries %>
        <% if (report_data && report_data.length > 0) { %>
            <div class="chart-container">
                <canvas id="ridePopularityChart"></canvas>
            </div>

            <script>
                // Pass EJS data to JavaScript
                const reportData = <%- JSON.stringify(report_data) %>;
                // ** THIS IS THE CORRECTED LINE **
                const labels = reportData.map(item => `${item.ride_name} (${item.location_name})`);
                const counts = reportData.map(item => item.total_riders);
                
                // Create a color palette for the bar chart
                const colors = [
                    'rgba(0, 123, 255, 0.7)',
                    'rgba(40, 167, 69, 0.7)',
                    'rgba(255, 193, 7, 0.7)',
                    'rgba(220, 53, 69, 0.7)',
                    'rgba(111, 66, 193, 0.7)',
                    'rgba(23, 162, 184, 0.7)',
                    'rgba(253, 126, 20, 0.7)'
                ];
                
                const backgroundColors = counts.map((_, index) => colors[index % colors.length]);

                const ctx = document.getElementById('ridePopularityChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar', // Bar chart
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Total Estimated Riders',
                            data: counts,
                            backgroundColor: backgroundColors, // Use color palette
                            borderColor: backgroundColors.map(color => color.replace('0.7', '1')), // Darker border
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: { display: true, text: 'Total Estimated Riders' }
                            },
                            x: {
                                // ** THIS IS THE CORRECTED LINE **
                                title: { display: true, text: 'Ride Name (Location)' }
                            }
                        },
                        plugins: {
                            title: {
                                display: true,
                                text: '<%= chartTitle %>', // Dynamic title from app.js
                                font: { size: 18 }
                            },
                            legend: {
                                display: false // Hide legend since it's a single dataset
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) { return `Riders: ${context.parsed.y}`; }
                                }
                            }
                        }
                    }
                });
            </script>
        <% } else if (report_data && report_data.length === 0) { %>
            <p style="text-align: center; font-weight: bold; margin-top: 2em;">No ride data found for the selected month.</p>
        <% } %>

    </div>
</body>
</html>