<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Log Park Entry</title>
    <style>
        body { font-family: sans-serif;
margin: 0; background-color: #f4f4f9; }
        h1 { color: #444; text-align: center; margin-top: 1em;
}
        form { max-width: 500px; margin: 2em auto; background: white; padding: 2.5em;
border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        
        form > div { margin-bottom: 1.5em;
} 
        
        label { display: block;
margin-bottom: 5px; font-weight: bold;
 }
        input, select { width: 100%; padding: 10px;
box-sizing: border-box; border-radius: 4px;
 border: 1px solid #ccc; }
        
        input#memberSearchPhone {
            margin-bottom: 10px;
}
        
        .price-display {
            background-color: #f9f9f9;
border: 1px solid #eee;
            border-radius: 8px;
            padding: 1em;
            margin-top: 1.5em;
}
        .price-display h3 {
            margin-top: 0;
border-bottom: 1px solid #ddd;
            padding-bottom: 0.5em;
        }
        .price-display p {
            display: flex;
justify-content: space-between;
            margin: 0.5em 0;
            font-size: 1.1em;
        }
        .price-display .final-price {
            font-weight: bold;
font-size: 1.3em;
            color: #28a745;
            border-top: 2px solid #28a745;
            padding-top: 0.5em;
            margin-top: 0.5em;
}
        
        button { padding: 12px 20px;
background-color: #28a745; color: white; border: none; cursor: pointer; border-radius: 4px; font-size: 1em; width: 100%;
}
        .error { color: #d9534f; font-weight: bold; background-color: #f2dede; padding: 1em; border-radius: 4px;
margin-bottom: 15px; }
        
        /* --- NEW: Success Message Style --- */
        .success { color: #155724; background-color: #d4edda; border-color: #c3e6cb; padding: 1em; border-radius: 4px;
margin-bottom: 15px; font-weight: bold; }

        .cancel-link {
            display: block;
margin-top: 1em;
            text-align: center;
            text-decoration: none;
            color: #6c757d;
            font-weight: bold;
}
        .cancel-link:hover { text-decoration: underline;
}

        /* --- NEW: Member Checklist Styles --- */
        #memberSelectionArea {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            padding: 1em;
            border-radius: 4px;
            margin-top: 1em;
        }
        .member-checklist-label {
            display: block;
            padding: 10px;
            border-bottom: 1px solid #eee;
            cursor: pointer;
        }
        .member-checklist-label:last-child {
            border-bottom: none;
        }
        .member-checklist-label:hover {
            background-color: #e9ecef;
        }
        .member-checklist-label input {
            width: auto;
            margin-right: 10px;
        }
        .checklist-controls {
            padding-top: 10px;
            margin-top: 10px;
            border-top: 2px solid #ccc;
        }
        .checklist-controls button {
            background: none;
            border: none;
            color: #007bff;
            cursor: pointer;
            font-weight: bold;
            padding: 5px;
            width: auto;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    
    <form action="/visits" method="POST" id="logVisitForm">
        <h1>Log Park Entry</h1>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <p class="error"><%= error %></p>
        <% } %>
        <% if (typeof success !== 'undefined' && success) { %>
            <p class="success"><%= success %></p>
        <% } %>

        <div>
           
<label for="ticket_type_id">Ticket Type:</label>
            <select id="ticket_type_id" name="ticket_type_id" required>
                <option value="" selected disabled>-- Select a ticket type --</option>
                <% ticketTypes.forEach(type => { %>
                    <option 
                  
      value="<%= type.ticket_type_id %>"
                        data-price="<%= type.base_price %>"
                        data-is-member="<%= type.is_member_type %>"
                    >
                    
    <%= type.type_name %>
                    </option>
                <% });
%>
            </select>
        </div>
        
        <div id="memberSelectBlock" style="display: none;">
            <label for="memberSearchPhone">Search Member by Phone:</label>
            <input type="text" id="memberSearchPhone" placeholder="Type phone number...">
            
            <div id="memberSelectionArea">
                <p style="text-align: center; color: #6c757d;"><i>Search for a member to see their group.</i></p>
            </div>
        </div>

        <div class="price-display">
            <h3>Calculated Price</h3>
            <p><span>Base Price:</span> <span id="priceBase">$ --.--</span></p>
            <p><span>Promotion:</span> <span id="priceDiscount">$ --.--</span></p>
            <p class="final-price"><span>Final Price:</span> <span id="priceFinal">$ --.--</span></p>
         </div>
 
       
        <br>
        <button type="submit">Log Visit</button>
        <a href="/dashboard" class="cancel-link">Cancel</a>
    </form>

    <script>
        // --- Pass data from EJS to JavaScript ---
        const ticketTypeData = new Map();
<% ticketTypes.forEach(type => { %>
            ticketTypeData.set('<%= type.ticket_type_id %>', {
                price: parseFloat('<%= type.base_price %>'),
                isMember: Boolean(<%= type.is_member_type %>)
            });
        <% });
%>
        const currentDiscountPercent = parseFloat('<%= currentDiscount %>') || 0;
        
        // --- NEW: Pass full member list ---
        const allActiveMembers = <%- JSON.stringify(activeMembers) %>;
        // Function to normalize phone numbers (passed from server)
        const normalizePhone = (phone) => (phone || "").replace(/\D/g, '');

        // --- NEW: Build member lookup maps ---
        const memberSearchMap = new Map(); // phone -> memberId
        const memberDataMap = new Map(); // memberId -> memberObject
        const memberGroupMap = new Map(); // primaryId -> [member Objects]

        allActiveMembers.forEach(member => {
            // Add to data map
            memberDataMap.set(member.membership_id, member);
            
            // Add to phone search map
            if (member.phone_number) {
                const normalizedPhone = normalizePhone(member.phone_number);
                if (normalizedPhone) {
                    memberSearchMap.set(normalizedPhone, member.membership_id);
                }
            }

            // Add to group map
            const primaryId = member.primary_member_id || member.membership_id;
            if (!memberGroupMap.has(primaryId)) {
                memberGroupMap.set(primaryId, []);
            }
            memberGroupMap.get(primaryId).push(member);
        });


// --- Get DOM Elements ---
        const ticketSelect = document.getElementById('ticket_type_id');
const memberSelectBlock = document.getElementById('memberSelectBlock');
        const memberSearchInput = document.getElementById('memberSearchPhone');
        const memberSelectionArea = document.getElementById('memberSelectionArea');
        
        const priceBaseEl = document.getElementById('priceBase');
const priceDiscountEl = document.getElementById('priceDiscount');
        const priceFinalEl = document.getElementById('priceFinal');

        // --- Event Listener for Ticket Type ---
        ticketSelect.addEventListener('change', function() {
            const selectedTypeId = this.value;
            if (!selectedTypeId) {
                resetPriceDisplay();
                return;
            }

 
           const ticket = ticketTypeData.get(selectedTypeId);
            if (!ticket) {
                resetPriceDisplay();
                return;
            }

            if (ticket.isMember) {
              
  memberSelectBlock.style.display = 'block'; 
                // memberSelect.required = true; // No longer a single select
                updatePriceDisplay(0, 0, 0); 
            } else {
                memberSelectBlock.style.display = 'none'; 
                // memberSelect.required = false; 
     
           
                memberSearchInput.value = ''; 
                clearMemberChecklist();
                
                const basePrice 
= ticket.price;
                const discountAmount = basePrice * (currentDiscountPercent / 100);
const finalPrice = basePrice - discountAmount;
                updatePriceDisplay(basePrice, discountAmount, finalPrice);
            }
        });

        // --- NEW: Event Listener for Member Phone Search ---
        memberSearchInput.addEventListener('input', function() {
            const searchTerm = this.value.replace(/\D/g, '');
            
            // Find the *first* matching member ID
            let foundMemberId = null;
            for (const [phone, memberId] of memberSearchMap.entries()) {
                if (phone.startsWith(searchTerm)) {
                    foundMemberId = memberId;
                    break;
                }
            }

            if (foundMemberId) {
                const member = memberDataMap.get(foundMemberId);
                const primaryId = member.primary_member_id || member.membership_id;
                const group = memberGroupMap.get(primaryId);
                buildMemberChecklist(group);
            } else {
                clearMemberChecklist();
            }
        });
        
        // --- NEW: Function to build the checklist ---
        function buildMemberChecklist(group) {
            if (!group || group.length === 0) {
                clearMemberChecklist();
                return;
            }

            memberSelectionArea.innerHTML = ''; // Clear the "search..." text
            
            group.forEach(member => {
                const label = document.createElement('label');
                label.className = 'member-checklist-label';
                
                const checkbox = document.createElement('input');
                checkbox.type = 'checkbox';
                checkbox.name = 'member_ids[]';
                checkbox.value = member.membership_id;
                
                label.appendChild(checkbox);
                label.appendChild(document.createTextNode(
                    ` ${member.first_name} ${member.last_name} (${member.email || 'No Email'})`
                ));
                memberSelectionArea.appendChild(label);
            });
            
            // Add "Select All" / "Select None"
            const controls = document.createElement('div');
            controls.className = 'checklist-controls';
            controls.innerHTML = `
                <button type="button" id="selectAllBtn">Select All</button>
                <button type="button" id="selectNoneBtn">Select None</button>
            `;
            memberSelectionArea.appendChild(controls);
            
            document.getElementById('selectAllBtn').addEventListener('click', () => {
                memberSelectionArea.querySelectorAll('input[type="checkbox"]').forEach(cb => cb.checked = true);
            });
            document.getElementById('selectNoneBtn').addEventListener('click', () => {
                memberSelectionArea.querySelectorAll('input[type="checkbox"]').forEach(cb => cb.checked = false);
            });
        }
        
        // --- NEW: Function to clear the checklist ---
        function clearMemberChecklist() {
            memberSelectionArea.innerHTML = '<p style="text-align: center; color: #6c757d;"><i>Search for a member to see their group.</i></p>';
        }

function updatePriceDisplay(base, discount, final) {
            priceBaseEl.textContent = formatAsCurrency(base);
priceDiscountEl.textContent = `- ${formatAsCurrency(discount)}`;
            priceFinalEl.textContent = formatAsCurrency(final);
        }

        function resetPriceDisplay() {
            priceBaseEl.textContent = '$ --.--';
priceDiscountEl.textContent = '$ --.--';
            priceFinalEl.textContent = '$ --.--';
            
            memberSelectBlock.style.display = 'none';
            memberSearchInput.value = '';
clearMemberChecklist();
        }

        function formatAsCurrency(amount) {
            return `$${amount.toFixed(2)}`;
}
    </script>
</body>
</html>