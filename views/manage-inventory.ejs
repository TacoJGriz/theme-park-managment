<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Item to Shelf</title>
    <style>
        body { font-family: sans-serif; margin: 0; background-color: #f4f4f9; }
        h1 { color: #444; text-align: center; margin-top: 1em; }
        form { max-width: 500px; margin: 2em auto; background: white; padding: 2em; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        div { margin-bottom: 15px; }
        label { display: block; margin-bottom: 5px; font-weight: bold; }
        input, select { width: 100%; padding: 10px; box-sizing: border-box; border-radius: 4px; border: 1px solid #ccc; }
        button { padding: 12px 20px; background-color: #28a745; color: white; border: none; cursor: pointer; border-radius: 4px; font-size: 1em; }
        .error { color: red; font-weight: bold; }
        .cancel-link { display: inline-block; margin-left: 15px; text-decoration: none; color: #6c757d; font-weight: bold; }
        .cancel-link:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    <h1>Add Item to Vendor Shelf</h1>
    <% if (typeof error !== 'undefined' && error) { %><p class="error"><%= error %></p><% } %>
    
    <form action="/inventory/add" method="POST">
        <div>
            <label for="public_vendor_id">Select Vendor:</label>
            <select id="public_vendor_id" name="public_vendor_id" required>
                <% vendors.forEach(vendor => { %>
                    <option value="<%= vendor.public_vendor_id %>" 
                        <%= (typeof preselected_vendor !== 'undefined' && preselected_vendor === vendor.public_vendor_id) ? 'selected' : '' %>>
                        <%= vendor.vendor_name %>
                    </option>
                <% }); %>
            </select>
        </div>
        <div>
            <label for="public_item_id">Select Item:</label>
            <select id="public_item_id" name="public_item_id" required>
                <% items.forEach(item => { %>
                    <option value="<%= item.public_item_id %>"><%= item.item_name %></option>
                <% }); %>
            </select>
        </div>
        <div>
            <label for="count">Initial Shelf Count:</label>
            <input type="number" id="count" name="count" min="0" value="0" required>
        </div>
        <br>
        <button type="submit">Add to Shelf</button>
        
        <%# UPDATED: Use the dynamic cancelLink %>
        <a href="<%= typeof cancelLink !== 'undefined' ? cancelLink : '/inventory' %>" class="cancel-link">Cancel</a>
    </form>
</body>
</html>