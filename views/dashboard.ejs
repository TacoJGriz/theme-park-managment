<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <style>
        .assignment-info {
            background-color: #cce5ff;
            color: #004085;
            border: 1px solid #b8daff;
            padding: 1em;
            border-radius: 8px;
            margin-bottom: 1.5em;
        }
        .assignment-info strong {
            display: block;
            margin-bottom: 0.5em;
        }
        .assignment-info ul {
            margin-top: 0.5em;
            margin-bottom: 0;
            padding-left: 20px;
        }
        body { font-family: sans-serif; margin: 0; background-color: #f4f4f9;
            color: #333; }
        .dashboard-container { padding: 2em;
        }
        h1 { color: #444;
        }
        .welcome-message { font-size: 1.2em; margin-bottom: 1.5em; padding-bottom: 0.5em;
            border-bottom: 1px solid #ddd;}
        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 1em;
        }
        .card {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .card h3 {
            margin-top: 0;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
            font-size: 1.1em;
            color: #333;
        }
        .card a {
            display: block;
            text-decoration: none;
            color: #007bff;
            padding: 8px 5px;
            border-radius: 4px;
            margin-bottom: 5px;
        }
        .card a:hover {
            background-color: #e9ecef;
            color: #0056b3;
        }
        .card a::before {
            content: 'Â» ';
            color: #6c757d;
        }
    </style>
</head>
<body>

    <%- include('partials/header') %>

    <div class="dashboard-container">
        <h1>Park Management Dashboard</h1>

        <% if (user) { %>
            <p class="welcome-message">
                Hello, <strong><%= user.firstName %> <%= user.lastName %></strong>!
                You are logged in as <strong><%= user.role %></strong>.
            </p>

            <% if ((user.role === 'Staff' || user.role === 'Location Manager') && user.locationName) { %>
                <div class="assignment-info">
                    <strong>You are assigned to: <%= user.locationName %></strong>
                    
                    <div style="margin-top: 10px; font-size: 0.95em;">
                        <% if (typeof assignedRides !== 'undefined' && assignedRides.length > 0) { %>
                            <div>
                                <span style="font-weight: bold; color: #555;">Attractions:</span> 
                                <%= assignedRides.map(r => r.ride_name).join(', ') %>
                            </div>
                        <% } %>
            
                        <% if (typeof assignedVendors !== 'undefined' && assignedVendors.length > 0) { %>
                            <div style="margin-top: 4px;">
                                <span style="font-weight: bold; color: #555;">Retail & Food:</span> 
                                <%= assignedVendors.map(v => v.vendor_name).join(', ') %>
                            </div>
                        <% } %>
                        
                        <% if (assignedRides.length === 0 && assignedVendors.length === 0) { %>
                            <div style="margin-top: 4px; font-style: italic; color: #777;">
                                No rides or vendors currently assigned to this location.
                            </div>
                        <% } %>
                    </div>
                </div>
            <% } %>

            <div class="card-container">

            <%# Card for Staff, Maintenance, Manager, Admin %>
            <% if (user.role === 'Admin' || user.role === 'Park Manager' || user.role === 'Location Manager' || user.role === 'Maintenance' || user.role === 'Staff') { %>
                <div class="card">
                    <h3>Rides & Maintenance</h3>
                    <a href="/rides">View Rides</a>
                </div>
            <% } %>

            <%# Card for Staff, Manager, Admin %>
            <% if (user.role === 'Admin' || user.role === 'Park Manager' || user.role === 'Staff') { %>
                 <div class="card">
                    <h3>Guest Services</h3>
                    <a href="/members">Manage Members</a>
                    <a href="/visits/new">Log Park Entry</a>
                </div>
            <% } %>

            <%# Card for Admin and Manager %>
            <% if (user.role === 'Admin' || user.role === 'Park Manager') { %>
                <div class="card">
                    <h3>Park Administration</h3>
                    <a href="/locations">Manage Locations</a>
                    <a href="/vendors">Manage Vendors</a>
                    <a href="/memberships/types">Manage Membership Types</a>
                    <a href="/ticket-types">Manage Ticket Types</a>
                </div>
                <div class="card">
                    <h3>Park Events</h3>
                    <a href="/promotions">Manage Promotions</a>
                    <a href="/weather">Manage Weather Events</a>
                </div>
            <% } %>

            <%# Card for Retail/Inventory %>
            <% if (user.role === 'Admin' || user.role === 'Park Manager' || user.role === 'Location Manager' || user.role === 'Staff') { %>
                 <div class="card">
                    <h3>Retail & Inventory</h3>
                    <% if (user.role !== 'Staff') { %>
                        <a href="/items">Manage Master Item List</a>
                    <% } %>
                    <a href="/inventory">View Park Inventory</a>
                </div>
            <% } %>

             <%# UPDATED: Card for Human Resources (Admin, Park Manager, Location Manager) %>
            <% if (user.role === 'Admin' || user.role === 'Park Manager' || user.role === 'Location Manager') { %>
                <div class="card">
                    <h3>Human Resources</h3>
                    <a href="/users">Manage Employees</a>
                </div>
            <% } %>
        </div>
        <% } %>
    </div>
</body>
</html>