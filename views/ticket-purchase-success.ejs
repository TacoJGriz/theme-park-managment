<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Purchase Successful!</title>
    <%# --- Include Barcode Library --- %>
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
    
    <style>
        body { 
            font-family: 'Poppins', sans-serif;
            margin: 0; 
            background-color: #f0f2f5; 
            color: #333; 
            display: flex; 
            flex-direction: column; 
            align-items: center; 
            padding: 2em;
        }

        .page-header {
            text-align: center;
            margin-bottom: 2em;
        }
        .page-header h1 { 
            color: #28a745; 
            margin: 0 0 0.2em 0;
        }
        .page-header p {
            color: #666;
            margin: 0;
        }

        /* --- TICKET CONTAINER (CAROUSEL) --- */
        .carousel-container {
            position: relative;
            width: 100%;
            max-width: 380px; /* Limit width for realistic ticket shape */
            margin: 0 auto;
        }

        /* --- THE TICKET VISUAL --- */
        .ticket-visual {
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            overflow: hidden;
            position: relative;
            display: none; /* Hidden by default for carousel */
            animation: slideUp 0.4s ease-out;
        }
        .ticket-visual.active {
            display: block;
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* -- Ticket Header Section -- */
        .ticket-header {
            background: linear-gradient(135deg, #17a2b8, #138496);
            padding: 1.5em;
            text-align: center;
            color: white;
            position: relative;
            /* Dashed line at bottom of header */
            border-bottom: 2px dashed rgba(255, 255, 255, 0.6);
        }

        /* The "Notches" (Circle cutouts) */
        .ticket-header::before, 
        .ticket-header::after {
            content: "";
            position: absolute;
            bottom: -10px; /* Half the height to sit on the line */
            width: 20px;
            height: 20px;
            background-color: #f0f2f5; /* Matches body bg to look transparent */
            border-radius: 50%;
            z-index: 2;
        }
        .ticket-header::before { left: -10px; }
        .ticket-header::after { right: -10px; }

        .park-name {
            font-size: 0.8em;
            text-transform: uppercase;
            letter-spacing: 2px;
            opacity: 0.9;
            margin-bottom: 5px;
        }
        .ticket-title {
            font-size: 1.6em;
            font-weight: 800;
            margin: 0;
            text-transform: uppercase;
            line-height: 1.1;
        }

        /* -- Ticket Body Section -- */
        .ticket-body {
            padding: 2em 1.5em;
            text-align: center;
        }

        .info-row {
            margin-bottom: 1.2em;
        }
        .info-label {
            display: block;
            font-size: 0.75em;
            color: #888;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
            margin-bottom: 3px;
        }
        .info-value {
            display: block;
            font-size: 1.1em;
            color: #333;
            font-weight: bold;
        }
        .price-paid {
            color: #28a745;
        }

        /* -- Barcode Section -- */
        .barcode-area {
            margin-top: 1em;
            padding-top: 1em;
            border-top: 1px solid #eee;
        }
        .barcode-svg {
            width: 100%;
            height: auto;
            max-height: 60px;
        }
        .ticket-code-text {
            font-family: 'Courier New', monospace;
            color: #555;
            font-size: 0.9em;
            letter-spacing: 1px;
            display: block;
            margin-top: 5px;
        }

        /* --- Navigation Arrows --- */
        .carousel-nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1.5em;
        }
        .nav-btn {
            background: white;
            border: 1px solid #ddd;
            color: #333;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            font-size: 1.2em;
            cursor: pointer;
            transition: all 0.2s;
            display: flex; align-items: center; justify-content: center;
        }
        .nav-btn:hover:not(:disabled) {
            background: #007bff;
            color: white;
            border-color: #007bff;
        }
        .nav-btn:disabled {
            opacity: 0.4;
            cursor: not-allowed;
        }
        .ticket-counter {
            font-weight: bold;
            color: #6c757d;
            font-size: 0.9em;
        }

        .bottom-actions {
            margin-top: 2em;
            text-align: center;
        }
        .home-link {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }
        .home-link:hover { text-decoration: underline; }

        /* Receipt Details (Hidden by default, optional expansion) */
        .receipt-mini {
            background: #fff;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 2em;
            font-size: 0.85em;
            color: #666;
            text-align: center;
            border: 1px solid #e0e0e0;
        }
    </style>
</head>
<body>

    <div class="page-header">
        <h1>Purchase Confirmed!</h1>
        <p>Your tickets are ready.</p>
    </div>

    <div class="receipt-mini">
        Sent to: <strong><%= receipt.email || receipt.phone %></strong> • 
        Total: <strong>$<%= receipt.total.toFixed(2) %></strong>
    </div>

    <div class="carousel-container">
        
        <% receipt.tickets.forEach((ticket, index) => { %>
            <div class="ticket-visual <%= index === 0 ? 'active' : '' %>" id="ticket-<%= index %>">
                
                <div class="ticket-header">
                    <div class="park-name">Primus Park</div>
                    <div class="ticket-title"><%= ticket.name %></div>
                    </div>

                <div class="ticket-body">
                    <div class="info-row">
                        <span class="info-label">Valid Date</span>
                        <span class="info-value"><%= receipt.purchaseDate.split(',')[0] %></span>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label">Price Paid</span>
                        <span class="info-value price-paid">$<%= ticket.price.toFixed(2) %></span>
                    </div>

                    <div class="barcode-area">
                        <svg id="barcode-<%= index %>"
                             class="barcode-svg"
                             data-format="CODE128"
                             data-value="<%= ticket.code %>"
                             data-text=" " 
                             data-displayValue="false">
                        </svg>
                        <span class="ticket-code-text"><%= ticket.code %></span>
                    </div>
                </div>
            </div>
        <% }); %>

        <div class="carousel-nav">
            <button id="prevBtn" class="nav-btn">&larr;</button>
            <span id="ticketCounter" class="ticket-counter">Ticket 1 of <%= receipt.tickets.length %></span>
            <button id="nextBtn" class="nav-btn">&rarr;</button>
        </div>

    </div>

    <div class="bottom-actions">
        <button onclick="window.print()" style="background:none; border:none; color:#555; cursor:pointer; font-size:0.9em; margin-bottom:10px; text-decoration:underline;">
            🖨 Print Tickets
        </button>
        <br>
        <a href="/" class="home-link">Return to Homepage</a>
    </div>

    <script>
        // --- CAROUSEL LOGIC ---
        const tickets = document.querySelectorAll('.ticket-visual');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const counter = document.getElementById('ticketCounter');
        let currentIndex = 0;
        const totalTickets = tickets.length;

        function updateCarousel(index) {
            // Hide all
            tickets.forEach(t => t.classList.remove('active'));
            // Show current
            tickets[index].classList.add('active');
            
            // Update Text & Buttons
            counter.textContent = `Ticket ${index + 1} of ${totalTickets}`;
            prevBtn.disabled = index === 0;
            nextBtn.disabled = index === totalTickets - 1;
        }

        prevBtn.addEventListener('click', () => {
            if (currentIndex > 0) {
                currentIndex--;
                updateCarousel(currentIndex);
            }
        });

        nextBtn.addEventListener('click', () => {
            if (currentIndex < totalTickets - 1) {
                currentIndex++;
                updateCarousel(currentIndex);
            }
        });

        // Init
        updateCarousel(0);

        // --- BARCODE INIT ---
        document.addEventListener('DOMContentLoaded', () => {
            JsBarcode(".barcode-svg").init();
        });
    </script>

</body>
</html>