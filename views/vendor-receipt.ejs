<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Receipt - <%= vendor.vendor_name %></title>
    <style>
        /* --- STANDARDIZED STYLES (from style-guide.ejs) --- */
        body { 
            font-family: 'Poppins', sans-serif;
            margin: 0; 
            background-color: #f4f4f9; 
            color: #333; 
        }
        .container { 
            max-width: 600px;
            margin: 3em auto; 
            background: white; 
            padding: 3em; 
            border-radius: 12px; 
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            text-align: center;
        }
        
        /* Receipt Styling */
        .receipt-header {
            border-bottom: 2px dashed #ddd;
            padding-bottom: 1.5em;
            margin-bottom: 1.5em;
        }
        .receipt-header h1 { margin: 0; color: #2c3e50; font-size: 2em; }
        .receipt-header p { margin: 5px 0 0 0; color: #777; font-size: 0.9em; }

        .receipt-items {
            width: 100%;
            margin-bottom: 1.5em;
            text-align: left;
            border-collapse: collapse;
        }
        .receipt-items th { text-transform: uppercase; font-size: 0.8em; color: #777; border-bottom: 1px solid #eee; padding: 8px 0; }
        .receipt-items td { padding: 12px 0; border-bottom: 1px solid #f9f9f9; }
        .receipt-items .price-col { text-align: right; }
        
        .receipt-total {
            display: flex;
            justify-content: space-between;
            font-size: 1.3em;
            font-weight: 700;
            color: #2c3e50;
            padding-top: 1em;
            border-top: 2px solid #333;
        }

        /* Buttons */
        .btn-print {
            background-color: #343a40;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            margin-right: 10px;
        }
        .btn-print:hover { background-color: #000; }

        .btn-continue {
            background-color: #007bff;
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: 600;
            display: inline-block;
        }
        .btn-continue:hover { background-color: #0056b3; }

        .actions { margin-top: 2.5em; }

        /* Print specific styles */
        @media print {
            body { background-color: white; }
            .container { box-shadow: none; margin: 0; width: 100%; max-width: 100%; }
            .actions, .navbar { display: none !important; } /* Hide buttons and nav */
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <div class="container">
        <div class="receipt-header">
            <h1><%= vendor.vendor_name %></h1>
            <p>Primus Theme Park</p>
            <p><%= new Date().toLocaleString() %></p>
            <p style="margin-top: 10px; font-family: monospace;">Transaction ID: <%= transactionId.split('-')[0].toUpperCase() %></p>
        </div>

        <table class="receipt-items">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Qty</th>
                    <th class="price-col">Price</th>
                    <th class="price-col">Total</th>
                </tr>
            </thead>
            <tbody>
                <% soldItems.forEach(item => { %>
                <tr>
                    <td><%= item.name %></td>
                    <td>x<%= item.quantity %></td>
                    <td class="price-col">$<%= parseFloat(item.price).toFixed(2) %></td>
                    <td class="price-col"><strong>$<%= item.subtotal.toFixed(2) %></strong></td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="receipt-total">
            <span>TOTAL</span>
            <span>$<%= grandTotal.toFixed(2) %></span>
        </div>

        <div class="actions">
            <button onclick="window.print()" class="btn-print"><i class="fa-solid fa-print"></i> Print Receipt</button>
            <a href="/inventory/checkout/<%= vendor.public_vendor_id %>" class="btn-continue">New Sale</a>
            <br><br>
            <a href="/vendors" style="color: #6c757d; text-decoration: none; font-size: 0.9em;">Back to Vendor List</a>
        </div>
    </div>
</body>
</html>