<style>
    .navbar { background-color: #343a40; padding: 10px 20px; display: flex; justify-content: space-between; align-items: center; color: white; margin-bottom: 1em; }
    .nav-links a { color: #f8f9fa; text-decoration: none; padding: 8px 12px; border-radius: 4px; transition: background-color 0.2s; margin-right: 5px; }
    .nav-links a:hover { background-color: #495057; }
    .nav-links a.approvals-link { background-color: #ffc107; color: #212529; font-weight: bold; }
    .nav-links a.approvals-link:hover { background-color: #e0a800; }
    .user-info { font-weight: bold; }
    .user-info a { color: #dc3545; font-weight: bold; margin-left: 20px; text-decoration: none; }
    .user-info a:hover { text-decoration: underline; }
</style>

<% if (user) { %>
<nav class="navbar">
    <div class="nav-links">
        <a href="/dashboard">Dashboard</a>

        <% if (user.role === 'Admin' || user.role === 'Manager') { %>
            <a href="/approvals" class="approvals-link">Approvals</a>
        <% } %>

        <% if (user.role === 'Admin' || user.role === 'HR') { %>
            <a href="/users">Employees</a>
        <% } %>

        <% if (user.role === 'Admin' || user.role === 'Manager') { %>
            <a href="/locations">Locations</a>
            <a href="/vendors">Vendors</a>
            <a href="/items">Items</a>
            <a href="/inventory">Inventory</a>
            <a href="/promotions">Promotions</a>
            <a href="/weather">Weather</a>
            <a href="/reports/attendance">Attendance Report</a>
        <% } %>

        <% if (user.role === 'Admin' || user.role === 'Manager' || user.role === 'Maintenance' || user.role === 'Staff') { %>
            <a href="/rides">Rides</a>
        <% } %>

        <% if (user.role === 'Admin' || user.role === 'Manager' || user.role === 'Staff') { %>
            <a href="/members">Members</a>
        <% } %>

    </div>
    <div class="user-info">
        <span>Welcome, <%= user.firstName %> (<%= user.role %>)</span>
        <a href="/change-password" style="color: #ffc107;">Change Password</a>
        <a href="/logout">Logout</a>
    </div>
</nav>
<% } else { %>
    <nav class="navbar"><div class="nav-links"><a href="/login">Login</a></div></nav>
<% } %>


