<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Account</title>
    <%# --- Import Google Fonts for Personality --- %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    
    <style>
        /* --- Shared Variables --- */
        :root {
            --primary: #6f42c1;
            --accent: #17a2b8; /* Member Theme */
            --dark: #343a40;
            --success: #28a745;
            --danger: #dc3545;
            --info: #007bff;
        }

        body { 
            font-family: 'Poppins', sans-serif;
            margin: 0; 
            background-color: #f0f2f5; 
            color: #333; 
        }
        .container { 
            max-width: 900px;
            margin: 2em auto; 
        }
        h1 { 
            font-family: 'Lobster', cursive;
            font-size: 2.5em;
            color: var(--dark);
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 0.5em;
            margin-bottom: 1.5em;
        }
        .card {
            background: white;
            padding: 2em;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 2em;
        }

        /* --- FLEXBOX HEADER FIX --- */
        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid var(--accent);
            padding-bottom: 10px;
            margin-bottom: 15px;
            flex-wrap: wrap; /* Wrap on small screens */
            gap: 10px;
        }
        .card h3 {
            margin: 0;
            font-size: 1.4em;
            color: var(--dark);
            font-weight: 700;
        }
        .card-header-actions {
            display: flex;
            gap: 10px;
        }
        /* -------------------------- */

        .info-pair {
            display: flex;
            justify-content: space-between;
            font-size: 1em;
            padding: 12px 0;
            border-bottom: 1px solid #f0f0f0;
        }
        .info-pair:last-child { border-bottom: none; }
        .info-pair strong { color: var(--dark); font-weight: 600; }
        .info-pair span { color: #555; }
        
        .info-pair .status-Active { color: var(--success); font-weight: bold; }
        .info-pair .status-Expired { color: var(--danger); font-weight: bold; }

        /* --- Family List Styles --- */
        .family-list {
            list-style: none;
            padding-left: 0;
            margin: 0;
        }
        .family-list li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 8px;
            border-bottom: 1px solid #f9f9f9;
        }
        .family-list li:last-child { border-bottom: none; }
        .family-list .you { font-style: italic; color: var(--accent); font-weight: 600; }

        /* Button Styles */
        .btn-header {
            font-size: 0.85em;
            font-weight: bold;
            text-decoration: none;
            color: white;
            padding: 8px 12px;
            border-radius: 6px;
            transition: background-color 0.2s;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            white-space: nowrap;
        }
        .btn-header-edit { background-color: var(--info); }
        .btn-header-edit:hover { background-color: #0056b3; }
        .btn-header-history { background-color: var(--accent); }
        .btn-header-history:hover { background-color: #138496; }
        
        .sub-member-edit-link {
            font-size: 0.9em;
            text-decoration: none;
            color: var(--info);
            font-weight: bold;
        }
        .sub-member-edit-link:hover { text-decoration: underline; }

        /* --- Payment Methods --- */
        .payment-method {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1em;
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            margin-bottom: 1em;
        }
        .payment-info { font-weight: bold; }
        .payment-info .default { color: var(--success); font-size: 0.9em; margin-left: 1em; }
        .payment-actions form { display: inline-block; margin-left: 10px; }
        .action-btn {
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            color: white;
            text-decoration: none;
            font-size: 0.9em;
        }
        .btn-delete { background-color: var(--danger); }
        .btn-default { background-color: var(--info); }
        .btn-default:disabled { background-color: #6c757d; cursor: not-allowed; }
        
        .btn-renew {
            display: block;
            background-color: var(--success);
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 700;
            margin-top: 1.5em;
            text-align: center;
            transition: background-color 0.2s;
            text-decoration: none;
        }
        .btn-renew:hover { background-color: #218838; }
        
        /* --- Payment Form Styles --- */
        .card label { display: block; margin-bottom: 5px; font-weight: 700; }
        .card input[type="text"],
        .card input[type="tel"],
        .card input[type="password"],
        .card select {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-family: 'Poppins', sans-serif;
        }
        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1em;
        }
        .payment-details-group {
            background-color: #f8f9fa;
            border: 1px solid #eee;
            padding: 1.5em;
            border-radius: 8px;
            margin-top: 1em;
        }
        .form-submit-btn {
            background-color: var(--success);
            margin-top: 1.5em;
            font-size: 1em;
        }
        
        .message-success {
            padding: 1em;
            border-radius: 8px;
            margin-bottom: 1.5em;
            font-weight: bold;
            border: 1px solid #c3e6cb;
            color: #155724;
            background-color: #d4edda;
        }
        .message-error {
            padding: 1em;
            border-radius: 8px;
            margin-bottom: 1.5em;
            font-weight: bold;
            border: 1px solid #f5c6cb;
            color: #721c24;
            background-color: #f8d7da;
        }
        .renewal-note {
            font-style: italic;
            color: #555;
            margin-top: 1em;
            padding: 10px;
            background-color: #f8f9fa;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <%- include('partials/member-header') %>
    <div class="container">
        <h1>Manage Your Account</h1>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="message-success"><%= success %></div>
        <% } %>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="message-error"><%= error %></div>
        <% } %>

        <div class="card">
            <div class="card-header">
                <h3>Membership Details</h3>
                <div class="card-header-actions">
                    <a href="/member/purchases" class="btn-header btn-header-history">View Purchase History</a>
                    <a href="/member/edit" class="btn-header btn-header-edit">Edit My Profile</a>
                </div>
            </div>
  
            <div class="info-pair">
                <strong>Member ID:</strong>
                <span><%= member.public_id.substring(0, 8).toUpperCase() %></span>
            </div>
            <div class="info-pair">
                <strong>Member Name:</strong>
                <span><%= member.first_name %> <%= member.last_name %></span>
            </div>
            <div class="info-pair">
                <strong>Membership Type:</strong>
                <span><%= member.type_name %></span>
            </div>
            <div class="info-pair">
                <strong>Status:</strong>
                <span class="status-<%= member.member_status %>"><%= member.member_status %></span>
            </div>
            <div class="info-pair">
                <strong>Valid Through:</strong>
                <span><%= new Date(member.end_date).toLocaleDateString() %></span>
            </div>
            
            <% if (isPrimaryMember) { %>
                <% if (canRenew) { %>
                    <a href="/member/renew" class="btn-renew">
                        Renew Now! (Valid Through <%= new Date(new Date(member.end_date).setFullYear(new Date(member.end_date).getFullYear() + 1)).toLocaleDateString() %>)
                    </a>
                <% } else if (member.member_status === 'Active') { %>
                    <p class="renewal-note">
                        Your membership expires on <%= new Date(member.end_date).toLocaleDateString() %>. You can renew within 60 days of this date.
                    </p>
                <% } %>
            <% } %>
        </div>

        <% if (familyMembers.length > 0 || isPrimaryMember) { %>
            <div class="card">
                <div class="card-header">
                    <h3>My Membership Group</h3>
                </div>
        
                <ul class="family-list">
                    <li>
                        <strong><%= member.first_name %> <%= member.last_name %></strong>
                        <span class="you">(You)</span>
                    </li>
                    <% familyMembers.forEach(person => { %>
                        <li>
                            <div>
                                <span><%= person.first_name %> <%= person.last_name %></span>
                                <span style="color: #6c757d; font-size: 0.9em; display: block;">ID: <%= person.public_membership_id.substring(0, 8).toUpperCase() %></span>
                            </div>
                            <% if (isPrimaryMember) { %>
                                <a href="/member/edit-sub/<%= person.public_membership_id %>" class="sub-member-edit-link">Edit Profile</a>
                            <% } %>
                        </li>
                    <% }); %>
                </ul>
            </div>
        <% } %>


        <% if (isPrimaryMember) { %>
            <div class="card">
                <div class="card-header">
                    <h3>Saved Payment Methods</h3>
                </div>

                <% if (paymentMethods.length > 0) { %>
                    <% paymentMethods.forEach(method => { %>
                        <div class="payment-method">
                            <div class="payment-info">
                                <span><%= method.mock_identifier %></span>
                                <% if (method.mock_expiration) { %>
                                    <span>(Exp: <%= method.mock_expiration %>)</span>
                                <% } %>
                                <% if (method.is_default) { %>
                                    <span class="default">(Default)</span>
                                <% } %>
                            </div>
                            <div class="payment-actions">
                                <form action="/member/payment/default/<%= method.public_payment_id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="action-btn btn-default" <% if (method.is_default) { %>disabled<% } %>>
                                        Set Default
                                    </button>
                                </form>
                                <form action="/member/payment/delete/<%= method.public_payment_id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="action-btn btn-delete" onclick="return confirm('Are you sure you want to delete this payment method?');">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>You have no saved payment methods.</p>
                <% } %>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h3>Add New Payment Method</h3>
                </div>
                <form action="/member/payment/add" method="POST" id="addPaymentForm" novalidate>
                    <div class="payment-choice" style="margin-top: 0;">
                        <label style="margin-right: 15px;">
                            <input type="radio" id="payWithCard" name="payment_method_choice" value="card" checked>
                            Pay with Card
                        </label>
                        <label>
                            <input type="radio" id="payWithBank" name="payment_method_choice" value="bank">
                            Pay with Bank Account
                        </label>
                    </div>

                    <div id="cardPaymentGroup" class="payment-details-group">
                        <div class="form-grid">
                            <div>
                                <label for="mock_card_brand">Card Brand:</label>
                                <select id="mock_card_brand" name="mock_card_brand">
                                    <option value="Visa">Visa</option>
                                    <option value="Mastercard">Mastercard</option>
                                    <option value="Amex">American Express</option>
                                </select>
                            </div>
                            <div>
                                <label for="mock_card_number">Card Number:</label>
                                <input type="text" id="mock_card_number" name="mock_card_number" placeholder="e.g., .... .... .... 4242">
                            </div>
                            <div>
                                <label for="mock_card_expiry">Expiration:</label>
                                <input type="text" id="mock_card_expiry" name="mock_card_expiry" placeholder="MM/YY">
                            </div>
                            <div>
                                <label for="mock_card_cvv">Security Code:</label>
                                <input type="text" id="mock_card_cvv" name="mock_card_cvv" placeholder="e.g., 123">
                            </div>
                        </div>
  
                        <label class="checkbox-label" style="display: flex; align-items: center; margin-top: 1em;">
                            <input type="checkbox" name="set_as_default_card" value="true" style="width: auto; margin-right: 10px;">
                            Set this as my default payment method.
                        </label>
                    </div>

                    <div id="bankPaymentGroup" class="payment-details-group" style="display: none;">
                        <div class="form-grid">
                            <div>
                                <label for="mock_routing_number">Routing Number:</label>
                                <input type="text" id="mock_routing_number" name="mock_routing_number" placeholder="e.g., 000123456">
                            </div>
                            <div>
                                <label for="mock_account_number">Account Number:</label>
                                <input type="text" id="mock_account_number" name="mock_account_number" placeholder="e.g., ....7890">
                            </div>
                        </div>
                        <label class="checkbox-label" style="display: flex; align-items: center; margin-top: 1em;">
                            <input type="checkbox" name="set_as_default_bank" value="true" style="width: auto; margin-right: 10px;">
                            Set this as my default payment method.
                        </label>
                    </div>
                    
                    <button type="submit" class="action-btn form-submit-btn">Add Method</button>
                </form>
            </div>
        <% } else { %>
            <div class="card">
                <h3>Account Management</h3>
                <p class="renewal-note" style="background-color: #cce5ff; border: 1px solid #b8daff; color: #004085;">
                    <i>Your membership is managed by your primary account holder. <br>Please contact them to make changes to renewals or payment methods.</i>
                </p>
            </div>
        <% } %>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const addPaymentForm = document.getElementById('addPaymentForm');
            if (!addPaymentForm) return;
            
            const cardRadio = document.getElementById('payWithCard');
            const bankRadio = document.getElementById('payWithBank');
            const cardGroup = document.getElementById('cardPaymentGroup');
            const bankGroup = document.getElementById('bankPaymentGroup');
            
            const cardInput = document.getElementById('mock_card_number');
            const expiryInput = document.getElementById('mock_card_expiry');
            const cvvInput = document.getElementById('mock_card_cvv');
            const routingInput = document.getElementById('mock_routing_number');
            const accountInput = document.getElementById('mock_account_number');

            const expiryRegex = /^(0[1-9]|1[0-2])\/\d{2}$/;
            const cvvRegex = /^\d{3,4}$/;
            const routingRegex = /^\d{9}$/;
            const accountRegex = /^\d{4,17}$/;

            cardRadio.addEventListener('change', () => {
                if (cardRadio.checked) {
                    cardGroup.style.display = 'block';
                    bankGroup.style.display = 'none';
                }
            });
            bankRadio.addEventListener('change', () => {
                if (bankRadio.checked) {
                    cardGroup.style.display = 'none';
                    bankGroup.style.display = 'block';
                }
            });

            function clearErrors() {
                document.querySelectorAll('.error-message').forEach(msg => msg.remove());
                document.querySelectorAll('.input-error').forEach(input => input.classList.remove('input-error'));
            }

            function showError(inputElement, message) {
                inputElement.classList.add('input-error');
                const errorSpan = document.createElement('span');
                errorSpan.className = 'error-message';
                errorSpan.textContent = message;
                inputElement.parentElement.appendChild(errorSpan);
            }

            addPaymentForm.addEventListener('submit', (event) => {
                clearErrors();
                let isValid = true;
                let firstErrorField = null;

                if (cardRadio.checked) {
                    const cardDigits = cardInput.value.replace(/\D/g, '');
                    if (cardDigits.length < 16) {
                        isValid = false;
                        showError(cardInput, 'Card number must be at least 16 digits.');
                        if (!firstErrorField) firstErrorField = cardInput;
                    }
                    if (!expiryRegex.test(expiryInput.value)) {
                        isValid = false;
                        showError(expiryInput, 'Expiration must be in MM/YY format (e.g., 08/28).');
                        if (!firstErrorField) firstErrorField = expiryInput;
                    }
                    if (!cvvRegex.test(cvvInput.value)) {
                        isValid = false;
                        showError(cvvInput, 'Security code must be 3 or 4 digits.');
                        if (!firstErrorField) firstErrorField = cvvInput;
                    }
                } else {
                    if (!routingRegex.test(routingInput.value)) {
                        isValid = false;
                        showError(routingInput, 'Routing number must be exactly 9 digits.');
                        if (!firstErrorField) firstErrorField = routingInput;
                    }
                    if (!accountRegex.test(accountInput.value)) {
                        isValid = false;
                        showError(accountInput, 'Account number must be between 4 and 17 digits.');
                        if (!firstErrorField) firstErrorField = accountInput;
                    }
                }

                if (!isValid) {
                    event.preventDefault();
                    if (firstErrorField) {
                        firstErrorField.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                }
            });
        });

        const style = document.createElement('style');
        style.innerHTML = `
            .input-error { border-color: #dc3545; }
            .error-message { color: #dc3545; font-size: 0.9em; font-weight: bold; display: block; margin-top: 5px; }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>