<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Account</title>
    <style>
        body { font-family: sans-serif; margin: 0; background-color: #f4f4f9; color: #333; }
        .container { max-width: 900px; margin: 2em auto; }
        h1 { color: #444; }
        .card {
            background: white;
            padding: 2em;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 2em;
        }
        .card h3 {
            margin-top: 0;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
            font-size: 1.3em;
            color: #17a2b8;
        }
        .info-pair {
            display: flex;
            justify-content: space-between;
            font-size: 1.1em;
            padding: 1em 0.5em;
            border-bottom: 1px solid #f0f0f0;
        }
        .info-pair:last-child { border-bottom: none; }
        .info-pair strong { color: #333; }
        .info-pair span { color: #555; }
        .status-Active { color: #28a745; font-weight: bold; }
        .status-Expired { color: #dc3545; font-weight: bold; }

        .payment-method {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1em;
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            margin-bottom: 1em;
        }
        .payment-info { font-weight: bold; }
        .payment-info .default { color: #28a745; font-size: 0.9em; margin-left: 1em; }
        .payment-actions form { display: inline-block; margin-left: 10px; }
        .action-btn {
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            color: white;
            text-decoration: none;
        }
        .btn-delete { background-color: #dc3545; }
        .btn-default { background-color: #007bff; }
        .btn-default:disabled { background-color: #6c757d; cursor: not-allowed; }
        .btn-receipt {
            display: inline-block;
            background-color: #17a2b8;
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 4px;
            font-weight: bold;
            margin-top: 1em;
        }
    </style>
</head>
<body>
    <%- include('partials/member-header') %>
    <div class="container">
        <h1>Manage Your Account</h1>

        <div class="card">
            <h3>Membership Details</h3>
            <div class="info-pair">
                <strong>Member Name:</strong>
                <span><%= member.first_name %> <%= member.last_name %></span>
            </div>
            <div class="info-pair">
                <strong>Membership Type:</strong>
                <span><%= member.type_name %></span>
            </div>
            <div class="info-pair">
                <strong>Status:</strong>
                <span class="status-<%= member.member_status %>"><%= member.member_status %></span>
            </div>
            <div class="info-pair">
                <strong>Valid Through:</strong>
                <span><%= new Date(member.end_date).toLocaleDateString() %></span>
            </div>
            <a href="/member/purchase-receipt" class="btn-receipt">View Original Purchase Receipt</a>
        </div>

        <div class="card">
            <h3>Saved Payment Methods</h3>
            <% if (paymentMethods.length > 0) { %>
                <% paymentMethods.forEach(method => { %>
                    <div class="payment-method">
                        <div class="payment-info">
                            <span><%= method.mock_identifier %></span>
                            <% if (method.mock_expiration) { %>
                                <span>(Exp: <%= method.mock_expiration %>)</span>
                            <% } %>
                            <% if (method.is_default) { %>
                                <span class="default">(Default)</span>
                            <% } %>
                        </div>
                        <div class="payment-actions">
                            <form action="/member/payment/default/<%= method.payment_method_id %>" method="POST" style="display: inline;">
                                <button type="submit" class="action-btn btn-default" <% if (method.is_default) { %>disabled<% } %>>
                                    Set as Default
                                </button>
                            </form>
                            <form action="/member/payment/delete/<%= method.payment_method_id %>" method="POST" style="display: inline;">
                                <button type="submit" class="action-btn btn-delete" onclick="return confirm('Are you sure you want to delete this payment method?');">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>You have no saved payment methods.</p>
            <% } %>
        </div>
    </div>
</body>
</html>