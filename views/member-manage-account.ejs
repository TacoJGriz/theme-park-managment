<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Account | Primus Park</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary: #6f42c1;
            --accent: #17a2b8; /* Member Theme */
            --dark: #343a40;
            --success: #28a745;
            --danger: #dc3545;
            --info: #007bff;
            --light: #f8f9fa;
            --white: #ffffff;
            --gray: #6c757d;
            
            --radius: 12px;
            --shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        body { font-family: 'Poppins', sans-serif; margin: 0; background-color: var(--light); color: var(--dark); }
        .container { max-width: 900px; margin: 3em auto; padding: 0 1em; }
        
        h1 { 
            font-family: 'Lobster', cursive; font-size: 3em; color: var(--dark);
            border-bottom: 2px solid #eee; padding-bottom: 0.5em; margin-bottom: 1.5em;
        }

        /* --- Magic Cards --- */
        .card {
            background: var(--white);
            padding: 2em;
            border-radius: var(--radius);
            box-shadow: var(--shadow-lg);
            margin-bottom: 2.5em;
            border-top: 5px solid var(--accent); /* Standard Member Accent */
        }

        .card-header {
            display: flex; justify-content: space-between; align-items: center;
            border-bottom: 2px solid #f0f0f0; padding-bottom: 15px; margin-bottom: 20px;
            flex-wrap: wrap; gap: 10px;
        }
        .card h3 { margin: 0; font-size: 1.5em; color: var(--dark); font-family: 'Lobster', cursive; }
        
        .card-header-actions { display: flex; gap: 10px; }

        /* --- Info Lists --- */
        .info-pair {
            display: flex; justify-content: space-between; font-size: 1em;
            padding: 12px 0; border-bottom: 1px solid #f9f9f9;
        }
        .info-pair:last-child { border-bottom: none; }
        .info-pair strong { color: var(--dark); font-weight: 600; }
        .info-pair span { color: #555; }
        
        .status-Active { color: var(--success); font-weight: bold; }
        .status-Expired { color: var(--danger); font-weight: bold; }

        .family-list { list-style: none; padding-left: 0; margin: 0; }
        .family-list li {
            display: flex; justify-content: space-between; align-items: center;
            padding: 15px 10px; border-bottom: 1px solid #f9f9f9;
        }
        .family-list li:last-child { border-bottom: none; }
        .family-list .you { color: var(--accent); font-weight: 700; font-size: 0.9em; background: rgba(23, 162, 184, 0.1); padding: 2px 8px; border-radius: 10px; }

        /* --- Buttons (Standardized Pill Shape) --- */
        .btn {
            padding: 8px 18px; border-radius: 30px; font-size: 0.9em; font-weight: 600;
            text-decoration: none; border: none; cursor: pointer; transition: var(--transition);
            display: inline-block; box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .btn:hover { transform: translateY(-2px); box-shadow: 0 4px 10px rgba(0,0,0,0.2); }

        .btn-edit { background-color: var(--accent); color: white; }
        .btn-edit:hover { background-color: #138496; }
        
        .btn-history { background-color: var(--primary); color: white; }
        .btn-history:hover { background-color: #5a32a3; }
        
        .btn-renew {
            background-color: var(--success); color: white;
            display: block; width: 100%; text-align: center; padding: 12px; font-size: 1.1em; margin-top: 1.5em;
        }
        .btn-renew:hover { background-color: #218838; }

        .btn-delete { background-color: #ffebee; color: var(--danger); }
        .btn-delete:hover { background-color: var(--danger); color: white; }
        
        .btn-default { background-color: #e7f5ff; color: var(--info); }
        .btn-default:hover { background-color: var(--info); color: white; }
        .btn-default:disabled { background-color: #f8f9fa; color: #ccc; cursor: not-allowed; box-shadow: none; transform: none; }

        .sub-edit-link { color: var(--accent); font-weight: 600; text-decoration: none; font-size: 0.9em; }
        .sub-edit-link:hover { text-decoration: underline; }

        /* --- Payment Section --- */
        .payment-method {
            display: flex; justify-content: space-between; align-items: center;
            padding: 1.2em; background: #f8f9fa; border: 1px solid #eee;
            border-radius: 12px; margin-bottom: 1em;
        }
        .payment-info .default { color: var(--success); font-weight: bold; font-size: 0.85em; margin-left: 10px; }
        
        /* --- Forms --- */
        .form-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5em; }
        label { display: block; margin-bottom: 8px; font-weight: 600; color: var(--dark); }
        
        input[type="text"], select {
            width: 100%; padding: 12px 15px; border: 2px solid #eee; border-radius: 8px;
            font-family: 'Poppins', sans-serif; font-size: 1em; transition: var(--transition); box-sizing: border-box;
        }
        input:focus, select:focus { outline: none; border-color: var(--accent); box-shadow: 0 0 0 4px rgba(23, 162, 184, 0.1); }

        .checkbox-label { display: flex; align-items: center; gap: 10px; margin-top: 1.5em; cursor: pointer; }
        .checkbox-label input { width: auto; margin: 0; }
        
        .form-submit-btn { background-color: var(--dark); color: white; width: 100%; margin-top: 1.5em; font-size: 1.1em; padding: 12px; }
        .form-submit-btn:hover { background-color: black; }
        
        .payment-choice { display: flex; gap: 20px; margin-bottom: 1.5em; background: #f8f9fa; padding: 10px; border-radius: 30px; justify-content: center; }
        .payment-choice label { cursor: pointer; display: flex; align-items: center; gap: 8px; padding: 5px 15px; border-radius: 20px; transition: 0.2s; }
        .payment-choice label:hover { background: #e9ecef; }

        .message-success { padding: 1em; border-radius: 8px; margin-bottom: 1.5em; font-weight: bold; background-color: #d4edda; color: #155724; text-align: center; }
        .message-error { padding: 1em; border-radius: 8px; margin-bottom: 1.5em; font-weight: bold; background-color: #f8d7da; color: #721c24; text-align: center; }
    </style>
</head>
<body>
    <%- include('partials/member-header') %>
    <div class="container">
        <h1>Manage Your Account</h1>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="message-success"><%= success %></div>
        <% } %>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="message-error"><%= error %></div>
        <% } %>

        <div class="card">
            <div class="card-header">
                <h3>Membership Details</h3>
                <div class="card-header-actions">
                    <a href="/member/purchases" class="btn btn-history">View History</a>
                    <a href="/member/edit" class="btn btn-edit">Edit Profile</a>
                </div>
            </div>
  
            <div class="info-pair"><strong>Member ID:</strong> <span><%= member.public_id.substring(0, 8).toUpperCase() %></span></div>
            <div class="info-pair"><strong>Member Name:</strong> <span><%= member.first_name %> <%= member.last_name %></span></div>
            <div class="info-pair"><strong>Membership Type:</strong> <span><%= member.type_name %></span></div>
            <div class="info-pair"><strong>Status:</strong> <span class="status-<%= member.member_status %>"><%= member.member_status %></span></div>
            <div class="info-pair"><strong>Valid Through:</strong> <span><%= new Date(member.end_date).toLocaleDateString() %></span></div>
            
            <% if (isPrimaryMember) { %>
                <% if (canRenew) { %>
                    <a href="/member/renew" class="btn btn-renew">Renew Now!</a>
                <% } else if (member.member_status === 'Active') { %>
                    <p style="margin-top: 1.5em; color: #666; font-style: italic; text-align: center;">
                        Membership expires on <%= new Date(member.end_date).toLocaleDateString() %>. Renewal available 60 days prior.
                    </p>
                <% } %>
            <% } %>
        </div>

        <% if (familyMembers.length > 0 || isPrimaryMember) { %>
            <div class="card">
                <div class="card-header"><h3>My Membership Group</h3></div>
                <ul class="family-list">
                    <li>
                        <div>
                            <strong><%= member.first_name %> <%= member.last_name %></strong>
                            <span class="you">YOU</span>
                        </div>
                    </li>
                    <% familyMembers.forEach(person => { %>
                        <li>
                            <div>
                                <span style="font-weight: 600;"><%= person.first_name %> <%= person.last_name %></span>
                                <span style="color: #6c757d; font-size: 0.85em; display: block;">ID: <%= person.public_membership_id.substring(0, 8).toUpperCase() %></span>
                            </div>
                            <% if (isPrimaryMember) { %>
                                <a href="/member/edit-sub/<%= person.public_membership_id %>" class="sub-edit-link">Edit Profile</a>
                            <% } %>
                        </li>
                    <% }); %>
                </ul>
            </div>
        <% } %>

        <% if (isPrimaryMember) { %>
            <div class="card">
                <div class="card-header"><h3>Saved Payment Methods</h3></div>
                <% if (paymentMethods.length > 0) { %>
                    <% paymentMethods.forEach(method => { %>
                        <div class="payment-method">
                            <div class="payment-info">
                                <strong><%= method.mock_identifier %></strong>
                                <% if (method.mock_expiration) { %><span style="color:#666; font-size:0.9em;"> (Exp: <%= method.mock_expiration %>)</span><% } %>
                                <% if (method.is_default) { %><span class="default">DEFAULT</span><% } %>
                            </div>
                            <div class="payment-actions">
                                <form action="/member/payment/default/<%= method.public_payment_id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-default" <% if (method.is_default) { %>disabled<% } %>>Default</button>
                                </form>
                                <form action="/member/payment/delete/<%= method.public_payment_id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-delete" onclick="return confirm('Delete this payment method?');">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p style="color: #666; text-align: center; font-style: italic;">No saved payment methods.</p>
                <% } %>
            </div>
            
            <div class="card">
                <div class="card-header"><h3>Add New Payment Method</h3></div>
                <form action="/member/payment/add" method="POST" id="addPaymentForm">
                    <div class="payment-choice">
                        <label><input type="radio" id="payWithCard" name="payment_method_choice" value="card" checked> Card</label>
                        <label><input type="radio" id="payWithBank" name="payment_method_choice" value="bank"> Bank</label>
                    </div>

                    <div id="cardPaymentGroup">
                        <div class="form-grid">
                            <div><label>Card Brand</label><select name="mock_card_brand"><option>Visa</option><option>Mastercard</option><option>Amex</option></select></div>
                            <div><label>Card Number</label><input type="text" id="mock_card_number" name="mock_card_number" placeholder="0000 0000 0000 0000"></div>
                            <div><label>Expiration</label><input type="text" id="mock_card_expiry" name="mock_card_expiry" placeholder="MM/YY"></div>
                            <div><label>Security Code</label><input type="text" id="mock_card_cvv" name="mock_card_cvv" placeholder="123"></div>
                        </div>
                        <label class="checkbox-label"><input type="checkbox" name="set_as_default_card" value="true"> Set as default</label>
                    </div>

                    <div id="bankPaymentGroup" style="display: none;">
                        <div class="form-grid">
                            <div><label>Routing Number</label><input type="text" id="mock_routing_number" name="mock_routing_number" placeholder="9 Digits"></div>
                            <div><label>Account Number</label><input type="text" id="mock_account_number" name="mock_account_number" placeholder="Account #"></div>
                        </div>
                        <label class="checkbox-label"><input type="checkbox" name="set_as_default_bank" value="true"> Set as default</label>
                    </div>
                    
                    <button type="submit" class="btn form-submit-btn">Save Payment Method</button>
                </form>
            </div>
        <% } else { %>
            <div class="card">
                <h3>Account Management</h3>
                <p style="background: #e7f5ff; color: #004085; padding: 1em; border-radius: 8px;">
                    Your membership is managed by your primary account holder. Please contact them for renewals or payment updates.
                </p>
            </div>
        <% } %>
    </div>
    
    <script>
        // ... (Keep the original script logic for payment toggling and validation) ...
        document.addEventListener('DOMContentLoaded', () => {
            const cardRadio = document.getElementById('payWithCard');
            const bankRadio = document.getElementById('payWithBank');
            const cardGroup = document.getElementById('cardPaymentGroup');
            const bankGroup = document.getElementById('bankPaymentGroup');
            
            if(cardRadio && bankRadio) {
                cardRadio.addEventListener('change', () => { if(cardRadio.checked){ cardGroup.style.display='block'; bankGroup.style.display='none'; } });
                bankRadio.addEventListener('change', () => { if(bankRadio.checked){ cardGroup.style.display='none'; bankGroup.style.display='block'; } });
            }
        });
    </script>
</body>
</html>