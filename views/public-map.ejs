<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Park Map | Primus Theme Park</title>
    <%# --- Fonts & Icons --- %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --primary: #6f42c1;
            --secondary: #ffc107;
            --dark: #343a40;
            --light: #f8f9fa;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            background-color: #222; /* Dark background for cinematic feel */
            color: #333;
            overflow-x: hidden;
        }

        /* --- Navbar Override for consistency --- */
        .navbar {
            background-color: rgba(52, 58, 64, 0.95);
            padding: 0.5em 2em;
            display: flex; justify-content: space-between; align-items: center; color: white;
            position: sticky; top: 0; z-index: 1000;
            backdrop-filter: blur(10px);
        }
        .nav-brand { font-family: 'Lobster', cursive; font-size: 1.8em; color: var(--secondary); text-decoration: none; }
        .back-btn { color: white; text-decoration: none; font-weight: bold; display: flex; align-items: center; gap: 5px; }
        .back-btn:hover { color: var(--secondary); }

        /* --- Map Container --- */
        .map-wrapper {
            position: relative;
            width: 100%;
            max-width: 1200px;
            margin: 2em auto;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 0 50px rgba(0,0,0,0.5);
            background: #000;
            user-select: none; /* Prevent selecting image while dragging */
        }

        .park-map {
            width: 100%;
            display: block;
            height: auto;
            pointer-events: none; /* Let clicks pass through to wrapper for dragging logic if needed */
        }

        /* --- Map Pins --- */
        .map-pin {
            position: absolute;
            transform: translate(-50%, -100%); /* Center bottom on the coordinate */
            cursor: pointer;
            transition: transform 0.2s, z-index 0.2s;
            z-index: 10;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .map-pin:hover {
            transform: translate(-50%, -110%) scale(1.1);
            z-index: 20;
        }

        /* Draggable State */
        .map-pin.draggable {
            cursor: grab;
        }
        .map-pin.draggable:active {
            cursor: grabbing;
        }

        .pin-icon {
            font-size: 2.5em;
            color: var(--secondary);
            text-shadow: 0 2px 5px rgba(0,0,0,0.5);
            /* Pin drop animation */
            animation: dropIn 0.5s ease-out;
        }
        
        .pin-label {
            background: rgba(0,0,0,0.8);
            color: white;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 0.8em;
            font-weight: bold;
            margin-top: 5px;
            white-space: nowrap;
            opacity: 0;
            transition: opacity 0.2s;
            pointer-events: none; /* Clicks go to pin */
        }

        .map-pin:hover .pin-label {
            opacity: 1;
        }

        @keyframes dropIn {
            0% { transform: translateY(-50px); opacity: 0; }
            100% { transform: translateY(0); opacity: 1; }
        }

        /* --- Admin Edit Controls --- */
        .admin-controls {
            text-align: center;
            margin-bottom: 1em;
            display: none; /* Hidden unless admin */
        }
        .btn-edit {
            background-color: var(--secondary); color: var(--dark);
            padding: 10px 20px; border-radius: 30px; border: none;
            font-weight: bold; cursor: pointer; font-size: 1em;
            box-shadow: 0 4px 10px rgba(255, 193, 7, 0.3);
        }
        .btn-save {
            background-color: #28a745; color: white;
            padding: 10px 20px; border-radius: 30px; border: none;
            font-weight: bold; cursor: pointer; font-size: 1em;
            box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3);
            display: none; 
        }
        .edit-mode-active .btn-edit { display: none; }
        .edit-mode-active .btn-save { display: inline-block; }
        
        .edit-mode-active .map-pin {
            animation: pulse 1s infinite;
        }
        @keyframes pulse {
            0% { filter: brightness(1); }
            50% { filter: brightness(1.3); }
            100% { filter: brightness(1); }
        }


        /* --- Modal Styles --- */
        .modal-backdrop {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.7);
            backdrop-filter: blur(5px);
            z-index: 2000;
            display: none; /* Hidden by default */
            justify-content: center;
            align-items: center;
        }
        .modal-backdrop.active { display: flex; }

        .info-card {
            background: white;
            width: 90%;
            max-width: 500px;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            animation: slideUp 0.3s ease-out;
        }

        @keyframes slideUp {
            from { transform: translateY(50px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .info-header {
            background: var(--primary);
            color: white;
            padding: 1.5em;
            position: relative;
        }
        .info-header h2 { margin: 0; font-family: 'Lobster', cursive; letter-spacing: 1px; }
        .info-header p { margin: 5px 0 0 0; font-size: 0.9em; opacity: 0.9; }
        
        .close-btn {
            position: absolute; top: 15px; right: 15px;
            background: rgba(255,255,255,0.2);
            border: none; color: white;
            width: 30px; height: 30px; border-radius: 50%;
            cursor: pointer; font-weight: bold;
        }
        .close-btn:hover { background: rgba(255,255,255,0.4); }

        .info-body { padding: 1.5em; max-height: 60vh; overflow-y: auto; }
        
        .section-title {
            color: var(--primary);
            border-bottom: 2px solid #eee;
            padding-bottom: 5px;
            margin-top: 1.5em;
            margin-bottom: 10px;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 0.85em;
            letter-spacing: 1px;
        }
        .section-title:first-child { margin-top: 0; }

        .item-list { list-style: none; padding: 0; margin: 0; }
        .item-list li {
            padding: 10px;
            border-bottom: 1px solid #f4f4f9;
            display: flex; justify-content: space-between; align-items: center;
        }
        .item-list li:last-child { border-bottom: none; }
        
        .status-badge {
            font-size: 0.7em; padding: 3px 8px; border-radius: 10px;
            font-weight: bold; text-transform: uppercase;
        }
        .badge-OPEN { background: #d4edda; color: #155724; }
        .badge-CLOSED { background: #f8d7da; color: #721c24; }
        .badge-BROKEN { background: #fff3cd; color: #856404; }

    </style>
</head>
<body>

    <nav class="navbar">
        <a href="/" class="nav-brand">Primus Park</a>
        
        <%# --- Smart Back Button --- %>
        <% if (member) { %>
            <a href="/member/dashboard" class="back-btn"><i class="fa-solid fa-arrow-left"></i> Back to Dashboard</a>
        <% } else if (user) { %>
            <a href="/dashboard" class="back-btn"><i class="fa-solid fa-arrow-left"></i> Back to Dashboard</a>
        <% } else { %>
            <a href="/" class="back-btn"><i class="fa-solid fa-arrow-left"></i> Back to Home</a>
        <% } %>
    </nav>

    <div style="text-align: center; color: white; margin-top: 2em;">
        <h1 style="font-family: 'Lobster', cursive; font-size: 3em; margin-bottom: 0.2em;">Park Map</h1>
        <p>Click a pin to explore the magic!</p>
    </div>
    
    <% if (user && (user.role === 'Admin' || user.role === 'Park Manager')) { %>
    <div class="admin-controls" style="display: block;">
        <button class="btn-edit" onclick="toggleEditMode()">✏️ Edit Pin Locations</button>
        <button class="btn-save" onclick="savePinLocations()">💾 Lock In Positions</button>
        <p id="editMsg" style="color: #ffc107; font-size: 0.9em; display: none; margin-top: 10px;">Drag pins to their new locations.</p>
    </div>
    <% } %>

    <div class="map-wrapper" id="mapContainer">
        <img src="/images/park-map.png" alt="Park Map" class="park-map">

        <% locations.forEach(loc => { %>
            <div class="map-pin" 
                 id="pin-<%= loc.location_id %>"
                 data-id="<%= loc.location_id %>" 
                 style="left: <%= loc.pin_x || 50 %>%; top: <%= loc.pin_y || 50 %>%;"
                 onclick="handlePinClick(<%= loc.location_id %>)">
                <i class="fa-solid fa-location-dot pin-icon"></i>
                <div class="pin-label"><%= loc.location_name %></div>
            </div>
        <% }); %>
    </div>

    <div class="modal-backdrop" id="infoModal" onclick="closeModal(event)">
        <div class="info-card" onclick="event.stopPropagation()">
            <div class="info-header">
                <button class="close-btn" onclick="closeModal(event)">✕</button>
                <h2 id="modalTitle">Location Name</h2>
                <p id="modalDesc">Location Description goes here...</p>
            </div>
            <div class="info-body">
                <div class="section-title">Attractions</div>
                <ul class="item-list" id="modalRides">
                    </ul>

                <div class="section-title">Dining & Shopping</div>
                <ul class="item-list" id="modalVendors">
                     </ul>
            </div>
        </div>
    </div>

    <script>
        // --- Serialize Data from Server ---
        const locationsData = <%- JSON.stringify(locations) %>;
        const ridesData = <%- JSON.stringify(rides) %>;
        const vendorsData = <%- JSON.stringify(vendors) %>;

        const modal = document.getElementById('infoModal');
        const titleEl = document.getElementById('modalTitle');
        const descEl = document.getElementById('modalDesc');
        const ridesList = document.getElementById('modalRides');
        const vendorsList = document.getElementById('modalVendors');
        const mapWrapper = document.getElementById('mapContainer');
        const editMsg = document.getElementById('editMsg');

        let isEditMode = false;

        // --- Toggle Edit Mode ---
        function toggleEditMode() {
            isEditMode = !isEditMode;
            document.body.classList.toggle('edit-mode-active', isEditMode);
            editMsg.style.display = isEditMode ? 'block' : 'none';

            const pins = document.querySelectorAll('.map-pin');
            pins.forEach(pin => {
                if (isEditMode) {
                    pin.classList.add('draggable');
                    pin.setAttribute('draggable', 'false'); // Disable native HTML5 drag to use custom logic
                    pin.onmousedown = dragMouseDown;
                } else {
                    pin.classList.remove('draggable');
                    pin.onmousedown = null;
                }
            });
        }

        // --- Save Pins Logic ---
        async function savePinLocations() {
            const pins = [];
            document.querySelectorAll('.map-pin').forEach(pin => {
                // Convert current style (e.g. "left: 20.5%") back to number
                const x = parseFloat(pin.style.left);
                const y = parseFloat(pin.style.top);
                pins.push({ id: pin.dataset.id, x: x, y: y });
            });

            try {
                const response = await fetch('/locations/update-coords', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ pins })
                });
                const result = await response.json();
                if (result.success) {
                    alert('Map positions locked in!');
                    toggleEditMode(); // Exit edit mode
                } else {
                    alert('Error saving positions.');
                }
            } catch (err) {
                console.error(err);
                alert('Failed to connect to server.');
            }
        }

        // --- Drag Functionality ---
        function dragMouseDown(e) {
            if (!isEditMode) return;
            e.preventDefault();
            
            const pin = e.currentTarget;
            const containerRect = mapWrapper.getBoundingClientRect();

            document.onmousemove = function(e) {
                e.preventDefault();
                // Calculate new position relative to container
                let newX = e.clientX - containerRect.left;
                let newY = e.clientY - containerRect.top;

                // Convert to percentage
                let percentX = (newX / containerRect.width) * 100;
                let percentY = (newY / containerRect.height) * 100;

                // Constrain to 0-100%
                percentX = Math.max(0, Math.min(100, percentX));
                percentY = Math.max(0, Math.min(100, percentY));

                pin.style.left = percentX + "%";
                pin.style.top = percentY + "%";
            };

            document.onmouseup = function() {
                document.onmouseup = null;
                document.onmousemove = null;
            };
        }


        // --- Standard Click Handler (Open Modal) ---
        function handlePinClick(id) {
            if (isEditMode) return; // Don't open modal while editing
            
            const loc = locationsData.find(l => l.location_id === id);
            if (!loc) return;

            const locRides = ridesData.filter(r => r.location_id === id);
            const locVendors = vendorsData.filter(v => v.location_id === id);

            // Populate Modal Header
            titleEl.textContent = loc.location_name;
            descEl.textContent = loc.summary || 'Experience the magic of ' + loc.location_name;

            // Populate Rides List
            ridesList.innerHTML = '';
            if (locRides.length === 0) {
                ridesList.innerHTML = '<li style="color:#777; font-style:italic;">No attractions currently listed.</li>';
            } else {
                locRides.forEach(ride => {
                    const li = document.createElement('li');
                    li.innerHTML = `
                        <div>
                            <strong>${ride.ride_name}</strong>
                            <div style="font-size:0.8em; color:#666;">${ride.ride_type}</div>
                        </div>
                        <span class="status-badge badge-${ride.ride_status}">${ride.ride_status}</span>
                    `;
                    ridesList.appendChild(li);
                });
            }

            // Populate Vendors List
            vendorsList.innerHTML = '';
            if (locVendors.length === 0) {
                vendorsList.innerHTML = '<li style="color:#777; font-style:italic;">No dining or shopping listed.</li>';
            } else {
                locVendors.forEach(vendor => {
                    const li = document.createElement('li');
                    li.innerHTML = `
                        <span>${vendor.vendor_name}</span>
                        <span class="status-badge badge-${vendor.vendor_status}">${vendor.vendor_status}</span>
                    `;
                    vendorsList.appendChild(li);
                });
            }

            // Show Modal
            modal.classList.add('active');
        }

        function closeModal(e) {
            modal.classList.remove('active');
        }
    </script>

</body>
</html>